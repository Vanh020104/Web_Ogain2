@model List<OgainShop.Models.Product>
@{
    ViewData["Title"] = "Revenue";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    //tinh tong so tien
    decimal totalRevenue = 0;
    foreach (var order in ViewBag.OrderList)
    {
        totalRevenue += order.TotalAmount;
    }
    ViewBag.TotalRevenue = totalRevenue;
    // tinh tong sp het hang
    int outOfStockProductCount = Model.Count(product => product.Qty == 0);
    // tong don hang
    int totalOrders = ViewBag.OrderList.Count;
    // tong sp
    int totalProducts = Model.Sum(product => product.Qty);
}

<main class="app-content">
    <div class="row">
        <div class="col-md-12">
            <div class="app-title">
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item"><a href="#"><b>Báo cáo doanh thu    </b></a></li>
                </ul>
                <div id="clock"></div>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6 col-lg-3">
            <div class="widget-small info coloured-icon">
                <i class='icon bx bxs-purchase-tag-alt fa-3x'></i>
                <div class="info">
                    <h4>Tổng sản phẩm</h4>
                    <p><b>@totalProducts sản phẩm</b></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="widget-small warning coloured-icon">
                <i class='icon fa-3x bx bxs-shopping-bag-alt'></i>
                <div class="info">
                    <h4>Tổng đơn hàng</h4>
                    <p><b>@totalOrders đơn hàng</b></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="widget-small primary coloured-icon">
                <i class='icon fa-3x bx bxs-chart'></i>
                <div class="info">
                    <h4>Tổng thu nhập</h4>
                    <p><b>@ViewBag.TotalRevenue đ</b></p>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="widget-small warning coloured-icon">
                <i class='icon fa-3x bx bxs-tag-x'></i>
                <div class="info">
                    <h4>Hết hàng</h4>
                    <p><b>@outOfStockProductCount sản phẩm </b></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="widget-small danger coloured-icon">
                <i class='icon fa-3x bx bxs-receipt'></i>
                <div class="info">
                    <h4>Đơn hàng hủy</h4>
                    <p><b>2 đơn hàng</b></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div>
                    <h3 class="tile-title">SẢN PHẨM</h3>
                </div>
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Image</th>
                                <th>Quantity</th>
                                <th>Giá tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.ProductId</td>
                                    <td>@product.ProductName</td>
                                    <td> <img src="@product.Thumbnail" width="100" height="100" /></td>
                                    <td>@product.Qty</td>
                                    <td>@product.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div>
                    <h3 class="tile-title">TỔNG ĐƠN HÀNG</h3>
                </div>
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>ID đơn hàng</th>
                                <th>Khách hàng</th>
                                <th>Đơn hàng</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.OrderList)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.FullName</td>
                                    <td>@order.OrderDate</td>
                                    <td>@order.TotalAmount đ</td>
                                    <td>
                                        <a asp-action="detailOrder" class="btn btn-primary" style="background-color:green; color:white;" asp-route-id="@order.OrderId">Details</a>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <th colspan="3">Tổng cộng:</th>
                                <td colspan="2">@ViewBag.TotalRevenue đ</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div>
                    <h3 class="tile-title">SẢN PHẨM HẾT HÀNG</h3>
                </div>
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Image</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Giá tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Where(product => product.Qty == 0))
                            {
                                <tr>
                                    <td>@product.ProductId</td>
                                    <td>@product.ProductName</td>
                                    <td><img src="@product.Thumbnail" alt="" width="100px;"></td>
                                    <td>@product.Qty</td>
                                    <td><span class="badge bg-danger">Hết hàng</span></td>
                                    <td>@product.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div>
                    <h3 class="tile-title">KHÁCH HÀNG</h3>
                </div>
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ và tên</th>
                                <th>Email </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.UserList)
                            {
                                <tr>
                                    <td>@user.UserId</td>
                                    <td>@user.Username</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <a asp-action="OrderUser" class="btn btn-primary" style="background-color:green; color:white;" asp-route-id="@user.UserId">
                                            Order
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="tile">
                <h3 class="tile-title">DỮ LIỆU HÀNG THÁNG</h3>
                <div class="embed-responsive embed-responsive-16by9">
                    <canvas class="embed-responsive-item" id="lineChartDemo"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="tile">
                <h3 class="tile-title">THỐNG KÊ DOANH SỐ</h3>
                <div class="embed-responsive embed-responsive-16by9">
                    <canvas class="embed-responsive-item" id="barChartDemo"></canvas>
                </div>
            </div>
        </div>
        <div>
            <canvas id="revenueChart" width="400" height="200"></canvas>
        </div>

        @section scripts {
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
                var ctx = document.getElementById('revenueChart').getContext('2d');
                var monthlyRevenue = @Html.Raw(Json.Serialize(ViewBag.MonthlyRevenue)); // Thay đổi ở đây

                var months = monthlyRevenue.map(function (item) {
                    return item.Month;
                });

                var amounts = monthlyRevenue.map(function (item) {
                    return item.TotalAmount;
                });

                var chart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: months,
                        datasets: [{
                            label: 'Total Revenue',
                            data: amounts,
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            </script>
        }
    </div>


</main>
