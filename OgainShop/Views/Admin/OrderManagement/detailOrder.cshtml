@model OgainShop.Models.Order

@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">Danh sách đơn hàng</li>
            <li class="breadcrumb-item"><a href="#">Chi tiết đơn hàng</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Order Details</h3>
                <div class="tile-body">
                    <div class="container">
                        <div class="row order_d_inner">
                            <div class="col-lg-4">
                                <div class="details_item">
                                    <h4>Order Info</h4>
                                    <ul class="list">
                                        <li><span>Order number</span>: MD0837</li>
                                        <li><span>Date</span>: 10/01/2024</li>
                                        <li><span>grand_total</span>: $9,400,000</li>
                                        <li><span>Payment method</span>: Credit Card</li>
                                        <li><span>Status</span>: Hoàn thành</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="details_item">
                                    <h4>Customer Information</h4>
                                    <ul class="list">
                                        <li><span>Full Name</span>: Triệu Thanh Phú</a></li>
                                        <li><span>Telephone</span>: 0123456789</li>
                                        <li><span>Email</span>: phu@example.com</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="details_item">
                                    <h4>Shipping</h4>
                                    <ul class="list">
                                        <li><span>Shipping method</span>: Express</li>
                                        <li><span>Address</span>: 123 Main Street, City</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="details-container">
                            <div class="user-details">

                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.OrderDate)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.OrderDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.TotalAmount)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.TotalAmount)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Status)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.IsPaid)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.IsPaid)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.User)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.User.UserId)
                                    </dd>
                                </dl>
                            </div>
                            <div class="edit-back-links">

                                <a class="btn btn-secondary" asp-action="order">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
