@{
    ViewData["Title"] = "Favourite Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<OgainShop.Models.Favorite>
<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <base href="/">
</head>
<body>
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Favorite Product</h2>
                        <div class="breadcrumb__option">
                            <a href="./index.html">Home</a>
                            <span>Favorite Product</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @if (Model != null && Model.Any())
                    {
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Products</th>
                                        <th>Price</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var favorite in Model)
                                    {
                                        <tr>
                                            <td class="shoping__cart__item">
                                                <img src="@favorite.Thumbnail" alt="" style="width:150px; height:150px;">
                                                <h5><a href="@Url.Action("Details", "Page", new { id = favorite.ProductId })">@favorite.ProductName</a></h5>

                                            </td>
                                            <td class="shoping__cart__price">
                                                $@favorite.Price
                                            </td>
                                            <td class="shoping__cart__item__close">
                                                <form method="post" asp-controller="Favorite" asp-action="RemoveFromFavorites" asp-route-favoriteId="@favorite.FavoriteId">
                                                    <button type="submit" class="btn btn-danger">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    }
                    else
                    {
                        <!-- Hiển thị thông báo khi không có sản phẩm yêu thích -->
                        <p>Không có sản phẩm yêu thích.</p>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                        <form method="post" asp-controller="Favorite" asp-action="ClearFavorites">
                            <button style="border: 1px solid white; margin-top: -48px;" type="submit" class="primary-btn cart-btn cart-btn-right">
                                <span class="icon_loading"></span>
                                Clear Favorites
                            </button>
                        </form>


                    </div>
                </div>
            </div>
    </section>
    <!-- Shoping Cart Section End -->
</body>
</html>
